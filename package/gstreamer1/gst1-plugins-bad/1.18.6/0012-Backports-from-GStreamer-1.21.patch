+static gboolean
+_h265_bit_writer_sei_mastering_display_colour_volume (const
+    GstH265MasteringDisplayColourVolume * mdcv, GstBitWriter * bw,
+    gboolean * space)
+{
+  gboolean have_space = TRUE;
