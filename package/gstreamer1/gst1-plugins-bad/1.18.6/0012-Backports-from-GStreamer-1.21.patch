+  item = _create_nice_stream_item (nice, session_id);
+
+  if (nice->priv->turn_server) {
+    _add_turn_server (nice, item, nice->priv->turn_server);
+  }
+
+  add_data.ice = nice;
+  add_data.item = item;
+
+  g_hash_table_foreach (nice->priv->turn_servers,
+      (GHFunc) _add_turn_server_func, &add_data);
