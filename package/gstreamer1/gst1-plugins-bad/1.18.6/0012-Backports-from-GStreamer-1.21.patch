+  gst_bit_writer_reset (&bw);
+  *size = 0;
+
+  if (!have_space)
+    return GST_H265_BIT_WRITER_NO_MORE_SPACE;
+  return GST_H265_BIT_WRITER_INVALID_DATA;
+}
