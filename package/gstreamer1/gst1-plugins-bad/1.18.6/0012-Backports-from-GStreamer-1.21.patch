+    WebRTCTransceiver * trans)
+{
+  GList *l;
+
+  for (l = trans->stream->fecdecs; l; l = l->next) {
+    GstElement *fecdec = GST_ELEMENT (l->data);
+    gboolean found_transceiver = FALSE;
+    int original_pt;
+    guint i;
