+      goto error;
+  }
+
+  WRITE_BITS (bw, vui->vcl_hrd_parameters_present_flag, 1);
+  if (vui->vcl_hrd_parameters_present_flag) {
+    if (!_h264_bit_writer_hrd_parameters (&vui->vcl_hrd_parameters, bw,
