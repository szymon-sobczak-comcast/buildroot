+  WRITE_BITS (bw, hrd->initial_cpb_removal_delay_length_minus1, 5);
+  WRITE_BITS (bw, hrd->cpb_removal_delay_length_minus1, 5);
+  WRITE_BITS (bw, hrd->dpb_output_delay_length_minus1, 5);
+  WRITE_BITS (bw, hrd->time_offset_length, 5);
